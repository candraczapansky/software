# Optimize npm for faster installations
legacy-peer-deps=true
prefer-offline=true
audit=false
fund=false
save-exact=true
engine-strict=false

# Skip scripts for faster installs where possible
ignore-scripts=false

# Use npm cache effectively
cache-max=9999999999
cache-min=0

# Parallel processing
fetch-retries=3
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=3000

# Reduce logging for faster execution
loglevel=error
