{
  "include": ["shared/**/*", "server/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "server/storage/index.ts",
    "server/automation-service.ts",
    "server/sms-appointment-booking.ts",
    "server/sms-auto-respond-service.ts",
    "server/sms-auto-respond-service-improved.ts",
    "server/sms-structured-assistant.ts",
    "server/services/helcim-terminal-service.ts",
    "server/utils/database-optimizer.ts"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": false,
    "outDir": "./dist",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
